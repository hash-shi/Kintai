<?xml version="1.0" encoding="UTF-8"?>

<validate>
	<proc func="search">	
		<variable name="srhTxtBushoCode" dispName="部署コード(検索)">
			<check class="IsRequired" message="!#itemName#!が入力されていません。" itemName="{dispName}"></check>
			<check class="IsHalf" message="!#itemName#!には全角文字は入力できません。" itemName="{dispName}"></check>
			<check class="IsNumber" message="!#itemName#!には数字を入力してください。" itemName="{dispName}"></check>
			<check class="MaxLength" message="!#itemName#!が4バイトを超えています。(4バイト = 全角4/2文字, 半角4文字)" itemName="{dispName}">
				<param name="type">full</param>
				<param name="length">4</param>
			</check>
		</variable>
	</proc>

	<proc func="delete">
		<variable name="txtBushoCode" dispName="部署コード">
			<check class="IsEquals" message="コピー機能使用時は削除できません。" itemName="{dispName}">
				<param name="targetvalue">hdnBushoCode</param>
			</check>
		</variable>
	</proc>
	
	<proc func="insert,update">
		<variable name="txtBushoCode" dispName="部署コード">
			<check class="IsRequired" message="!#itemName#!が入力されていません。" itemName="{dispName}"></check>
			<check class="IsHalf" message="!#itemName#!には全角文字は入力できません。" itemName="{dispName}"></check>
			<check class="IsNumber" message="!#itemName#!には数字を入力してください。" itemName="{dispName}"></check>
			<check class="MaxLength" message="!#itemName#!が4バイトを超えています。(4バイト = 全角4/2文字, 半角4文字)" itemName="{dispName}">
				<param name="type">full</param>
				<param name="length">4</param>
			</check>
		</variable>
		<variable name="txtBushoName" dispName="部署名">
			<check class="IsRequired" message="!#itemName#!が入力されていません。" itemName="{dispName}"></check>			
			<check class="MaxLength" message="!#itemName#!が20バイトを超えています。(20バイト = 全角20/2文字, 半角20文字)" itemName="{dispName}">
				<param name="type">full</param>
				<param name="length">20</param>
			</check>
		</variable>
		<variable name="txtBushoKbn" dispName="部署区分">
			<check class="IsRequired" message="!#itemName#!が入力されていません。" itemName="{dispName}"></check>
			<check class="IsHalf" message="!#itemName#!には全角文字は入力できません。" itemName="{dispName}"></check>
			<check class="IsNumber" message="!#itemName#!には数字を入力してください。" itemName="{dispName}"></check>
			<check class="MaxLength" message="!#itemName#!が2バイトを超えています。(2バイト = 全角2/2文字, 半角4文字)" itemName="{dispName}">
				<param name="type">full</param>
				<param name="length">2</param>
			</check>
		</variable>
		<variable name="selKbnName" dispName="部署区分">
			<check class="IsRequired" message="該当する!#itemName#!が存在しません。" itemName="{dispName}"></check>
		</variable>
		<variable name="txtEigyoshoCode" dispName="営業所コード">
			<check class="IsRequired" message="!#itemName#!が入力されていません。" itemName="{dispName}"></check>
			<check class="IsHalf" message="!#itemName#!には全角文字は入力できません。" itemName="{dispName}"></check>
			<check class="IsNumber" message="!#itemName#!には数字を入力してください。" itemName="{dispName}"></check>
			<check class="MaxLength" message="!#itemName#!が3バイトを超えています。(3バイト = 全角3/2文字, 半角3文字)" itemName="{dispName}">
				<param name="type">full</param>
				<param name="length">3</param>
			</check>
		</variable>
		<variable name="txtEigyoshoName" dispName="営業所名">
			<check class="IsRequired" message="該当する営業所コードが存在しません。" itemName="{dispName}"></check>
		</variable>
	</proc>
	
	<proc func="delete_,insert_,update_">
		<variable name="dummy" dispName="">
			<check class="ExclusiveValidate" message="このデータはすでに、別のユーザに更新されています。もう一度データを確認してください。" itemName="{dispName}">
				<param name="tableName">MST_BUSHO</param>
				<param name="keyName">BushoCode</param>
				<param name="keyValue">txtBushoCode</param>
				<param name="saishuKoshinDate">hdnSaishuKoshinDate</param>
				<param name="saishuKoshinJikan">hdnSaishuKoshinJikan</param>
			</check>
		</variable>
	</proc>
	
	<proc func="copy_">
		<variable name="dummy" dispName="">
			<check class="ExclusiveValidate" message="同一キーのレコードが既に存在します。" itemName="{dispName}">
				<param name="tableName">MST_BUSHO</param>
				<param name="keyName">BushoCode</param>
				<param name="keyValue">txtBushoCode</param>
				<param name="saishuKoshinDate"></param>
				<param name="saishuKoshinJikan"></param>
			</check>			
		</variable>
	</proc>
	
</validate>
